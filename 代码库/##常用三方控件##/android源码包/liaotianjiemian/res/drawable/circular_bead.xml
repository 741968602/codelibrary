<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
     android:shape="rectangle"
     android:useLevel="false" >
     <!-- 填充 -->
   <solid android:color="@color/white" />
   
   <!-- 定义内容离边界的距离。-->       
   <padding   android:left="0px"  android:top="0px" android:bottom="0px" android:right="0px" />
   
   <!--设置圆角--> 
   <corners android:topLeftRadius="3px" 
          android:topRightRadius="3px" 
          android:bottomLeftRadius="3px" 
          android:bottomRightRadius="3px"/>
   
    <!-- 上 中下颜色的设置-->   
     <gradient
     android:startColor="@color/white"
     android:useLevel="false"
     android:type="linear"
     android:angle="90"
     android:endColor="@color/white" />
     
     <!-- 边框颜色、宽度-->
    <stroke android:color="@color/border_color" 
       android:width="1px" />  
       

</shape>
