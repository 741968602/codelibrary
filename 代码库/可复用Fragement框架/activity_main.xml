<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/fragContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainmenu">

    </RelativeLayout>

    <LinearLayout

        android:id="@+id/mainmenu"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/selectgray"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fragementfood_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragementfood_button"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/food_menu_pressed"
                    android:gravity="center"

                    />

                <TextView
                    android:id="@+id/fragementfood_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="每日食材"
                    android:textColor="@color/menu_pressed_color"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragementessay_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragementessay_button"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/book_menu_normal"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/fragementessay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="每日文章"
                    android:textColor="@color/menu_normal_color"
                    android:textSize="10dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragementmine_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragementmine_button"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/mine_menu_normal"
                    android:gravity="center"

                    />

                <TextView
                    android:id="@+id/fragementmine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我的"
                    android:textColor="@color/menu_normal_color"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
